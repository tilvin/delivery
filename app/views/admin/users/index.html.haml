.jumbotron
  %h3 Пользователи
  %p.text-right= link_to 'Добавить пользователя', new_admin_user_path, class: 'btn btn-success'
  %table.table.table-hover
    %thead
      %tr
        %td Ресторан
        %td Эл. почта
        %td Роль
        %td
        %td
    %tbody
      - @users.each do |user|
        %tr
          %td= user.restaurant.try(:name)
          %td= user.email
          %td= I18n.t("activerecord.attributes.user.role.#{user.role}")
          %td= link_to 'Редактировать', edit_admin_user_path(user), class: 'btn btn-warning'
          %td= link_to 'Удалить', admin_user_path(user), method: :delete, class: 'btn btn-danger'